{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Development)",
      "type": "npm",
      "script": "build:dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Build (Production)",
      "type": "npm",
      "script": "build",
      "group": "build",
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Dev Server",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "owner": "dev-server",
        "pattern": {
          "regexp": "^(NEVER_MATCH):([0-9]+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "\\[server\\] Starting",
          "endsPattern": "server running on https://localhost"
        }
      }
    },
    {
      "label": "Debug: Excel Desktop",
      "type": "npm",
      "script": "start:desktop",
      "dependsOn": ["Dev Server"],
      "presentation": {
        "clear": true,
        "panel": "new",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Debug",
      "type": "npm",
      "script": "stop",
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Lint: Check for problems",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint: Fix all auto-fixable problems",
      "type": "npm",
      "script": "lint:fix",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run Tests",
      "type": "npm",
      "script": "test",
      "group": "test",
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}

{
  "compilerOptions": {
    // Language and Environment
    "target": "es2024",
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    // Modules (ESM with bundler resolution)
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // Emit
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // Types
    "types": [
      "vitest/globals",
      "office-js",
      "office-runtime"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}